{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [ "dom", "es6" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "./app/build/",
    "sourceMap": true,
    "target": "es6",
    "paths": {
      "$constants/*": [ "src/constants/*" ],
      "$containers/*": [ "src/renderer/containers/*" ],
      "$store/*": [ "src/redux/store/*" ],
      "$actions/*": [ "src/redux/actions/*" ],
      "$reducers/*": [ "src/redux/reducers/*" ],
      "$types/*": [ "src/redux/types/*" ],
      "$utils/*": [ "src/utils/*" ]
    }
  },
  "include": [
    "src/**/*",
    "./config/webpack.base.config.js",
    "./config/webpack.build.config.js",
    "./config/webpack.dev.config.js",
    "./.eslintrc.js"
  ],
  "exclude": ["node_modules", "./app/build/**/*"]
}